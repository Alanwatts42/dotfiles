#!/usr/bin/env bash
# Custom commands
# This file adds shell scripts to path so I can execute them like commands
# without needing to explictly type out their full path or ".sh" etc.

chmodx () {
    chmod +x "$1"
}

lswalk () {
    for i in *;do
        "$@" "$i"
    done
}

applist () {
    apt list | grep "$@"
}

upinstall () {
    sudo apt-get update -y;
    sudo apt-get upgrade -y;
    sudo apt-get install "$@" --install-suggests -y
}


